<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@color/ash"/>
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@color/red"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@color/ash"/>
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@color/ash"/>

    <!-- Pressed -->
    <item android:state_selected="true" android:state_pressed="true" android:drawable="@color/ash"/>
    <item android:state_pressed="true" android:drawable="@color/ash"/>

</selector>
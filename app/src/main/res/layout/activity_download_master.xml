<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_dwnldmaster"
    android:background="@color/appConfigurationBg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:id="@+id/rl_tool"
        >

        <ImageView
            android:id="@+id/iv_dwnldmaster_back"
            android:layout_width="97dp"
            android:layout_height="73dp"
            android:layout_alignParentLeft="true"
            android:background="@color/ash"
            android:src="@mipmap/left_arrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fontFamily="@font/poppins_medium"
            android:layout_toRightOf="@+id/iv_dwnldmaster_back"
            android:text="Master List Downloader"
            android:textAllCaps="true"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:typeface="serif" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_masterdwnload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appConfigurationBg"
        android:layout_below="@+id/rl_tool">

        <TextView
            android:id="@+id/tv_hqlist"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp"
            android:background="@drawable/shape_user"
            android:fontFamily="@font/poppins"
            android:gravity="center|left"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="17dp"
            android:drawableRight="@mipmap/down_arrow"
            android:text="Headquater"
            android:textAllCaps="true"
            android:textColor="#1a1a1a"
            android:textSize="18dp"
            android:typeface="serif" />

        <ListView
            android:id="@+id/lv_master_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="98dp"
            android:background="@drawable/shape_user"
            android:layout_marginBottom="60dp"
            android:divider="#c4bfbf"
            android:dividerHeight="1dp"/>


    </RelativeLayout>


</RelativeLayout>
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/eligible"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:id="@+id/txt_elig"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/poppins_medium"
                            />
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:id="@+id/list_elig"
                            android:background="#ffffff"
                            android:divider="#000000"
                            android:dividerHeight="1dp"
                            android:layout_below="@+id/txt_elig">

                        </ListView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/taken"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:id="@+id/txt_take"
                            android:layout_below="@+id/list_elig"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/poppins_medium"
                            />
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:id="@+id/list_taken"
                            android:background="#ffffff"
                            android:divider="#000000"
                            android:dividerHeight="1dp"
                            android:layout_below="@+id/txt_take">

                        </ListView>
                        <TextView

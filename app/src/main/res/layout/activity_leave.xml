                            android:layout_height="180dp"
                            android:id="@+id/list_avail"
                            android:divider="#000000"
                            android:dividerHeight="1dp"
                            android:background="#ffffff"
                            android:layout_below="@+id/txt_avail"/>
                    </RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="#00000000"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_white_grey">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_close"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:id="@+id/list_close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created Presentation"
            android:textColor="#000"
            android:layout_above="@+id/presntation_nmLists"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9C9B9B"
            android:id="@+id/view"
            android:padding="5dp"
            android:layout_below="@+id/list_close"/>
        <ListView
            android:id="@+id/presntation_nmLists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:divider="#000"
            android:dividerHeight="0.5dp"
            android:layout_below="@+id/view"/>
    </RelativeLayout>

</RelativeLayout>

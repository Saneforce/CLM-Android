        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:id="@+id/rel">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="97dp"
                android:layout_height="73dp"
                android:background="#666666"
                android:src="@mipmap/left_arrow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Values"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/txt_head_report"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/back_btn"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <RadioGroup
                    android:id="@+id/Toggle_Hq_Brand"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:checkedButton="@+id/offer"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Btn_HQwise"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rpt_enable"
                        android:button="@null"
                        android:gravity="center"
                        android:text="HQ"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/Btn_brandwise"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rpt_disable"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Brand"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/Btn_fieldforcewise"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rpt_disable"
                        android:button="@null"
                        android:gravity="center"
                        android:text="FieldForce"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/ViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
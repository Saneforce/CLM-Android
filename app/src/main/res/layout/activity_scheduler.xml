<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SchedulerActivity"
    android:background="#CAC9C9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff"
        android:id="@+id/lay_tool">
        <ImageView
            android:id="@+id/iv_dwnldmaster_back"
            android:layout_width="97dp"
            android:layout_height="73dp"
            android:background="#666666"
            android:src="@mipmap/left_arrow" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduler"
            android:textSize="18sp"
            android:textColor="#D80808"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_toRightOf="@+id/iv_dwnldmaster_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_rect_ash"
        android:layout_below="@+id/lay_tool"
        android:id="@+id/rlay_calendar_tool">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_red_shape"
            android:id="@+id/rlay_tday"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Today   "
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect_white"
            android:layout_toRightOf="@+id/rlay_tday"
            android:layout_marginLeft="10dp"
            android:id="@+id/rlay_schedule"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Scheduler Event   "
                android:padding="5dp"
                android:textColor="#000"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  JUNE 2020   "
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:id="@+id/txt_month"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect_white"
            android:id="@+id/rlay_prev"
            android:layout_toLeftOf="@+id/txt_month"
            android:layout_centerVertical="true"
           >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/img_prev_yr"
                android:src="@drawable/back_arrow_tp_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect_white"
            android:id="@+id/rlay_nxt"
            android:layout_toRightOf="@+id/txt_month"
            android:layout_centerVertical="true"
           >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/img_nxt_yr"
                android:src="@drawable/back_arrow_tp_small"
                android:rotation="180"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_drak_grey"
            android:id="@+id/rlay_day"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Day  "
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_drak_grey"
            android:id="@+id/rlay_week"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rlay_day">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Week  "
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_red_shape"
            android:id="@+id/rlay_mnth"
            android:layout_toLeftOf="@+id/rlay_week"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Month  "
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </RelativeLayout>


    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlay_calendar_tool"
    android:id="@+id/rlay_day_tool">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:id="@+id/lin_month">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textColor="#000"
            android:gravity="center"
            android:background="#fff"
            android:padding="10dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textColor="#000"
            android:gravity="center"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:textColor="#000"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:orientation="horizontal"
        android:id="@+id/lin_week">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:gravity="center"
            android:background="#fff"
            android:padding="10dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textColor="#000"
            android:gravity="center"
            android:background="#fff"
            android:padding="10dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textColor="#000"
            android:gravity="center"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:textColor="#000"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lin_day"
        android:visibility="gone">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:gravity="center"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:id="@+id/txt_day"/>
    </LinearLayout>
</RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycle_view"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/rlay_day_tool"/>

<!--
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlay_day_tool"
        android:id="@+id/grid"
        android:numColumns="7"
        android:layout_marginTop="1dp"/>
-->

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appConfigurationBg"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:id="@+id/l1_app_config"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="97dp"
            android:layout_height="73dp"
            android:background="#666666"
            android:src="@mipmap/left_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left|center"
            android:paddingLeft="25dp"
            android:text="@string/survey"
            android:textAllCaps="true"
            android:textColor="#ff1d25"
            android:textSize="18dp"
            android:id="@+id/txt_tool_header"
            android:typeface="serif" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:id="@+id/spinner"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rl_dcr_drgrid_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l1_app_config"
        android:visibility="gone">
        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_red"
            android:textColor="#fff"
            android:text="@string/slct_lst_dr"
            android:id="@+id/cancel_txt"
            android:paddingEnd="10dp"
            android:drawableRight="@drawable/ic_baseline_cancel_24"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_below="@+id/cancel_txt"
            android:id="@+id/et_searchDr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shape_user"
            android:drawableRight="@mipmap/search"
            android:fontFamily="@font/poppins"
            android:gravity="center|left"
            android:hint="@string/search_customer"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#5e5e5e"
            android:textColorHint="#888888"
            android:textSize="14sp"
            android:windowSoftInputMode="stateAlwaysHidden">


        </androidx.appcompat.widget.AppCompatEditText>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gl_dr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_searchDr"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <GridView
                android:id="@+id/gridview_dcrselect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="24dp"
                android:numColumns="3"
                android:verticalSpacing="25dp"
                />
        </androidx.gridlayout.widget.GridLayout>
    </RelativeLayout>

    <include
        layout="@layout/pre_survery_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />
    <!--    <FrameLayout-->
    <!--        android:id="@+id/frame_layout"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->

</RelativeLayout>
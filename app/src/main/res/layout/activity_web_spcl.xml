<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_Report.Activity.Web_Activity">

    <LinearLayout
        android:id="@+id/toolbarheadchemistproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarchemistpro"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/headerbar"
            app:popupTheme="@style/AppTheme.AppBarOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_btn_chepro"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:src="@drawable/backarrow"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/back_btn_chepro"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <WebView
        android:id="@+id/weburl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarheadchemistproduct"/>

</RelativeLayout>
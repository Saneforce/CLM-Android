<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F5F5"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Card_HQ_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight=".15"
                android:background="#FFFFFF"
                android:orientation="vertical"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp">

                        <ImageView
                            android:id="@+id/iv_bkd"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:src="@drawable/img_arrow_bkd"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_dot"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="⬤"
                            android:textColor="#00BFFF"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="start"
                            android:text="Nainar"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_fwd"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:src="@drawable/img_arrow_fwd"
                            android:visibility="gone" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_subdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="⬤"
                            android:textColor="#00BFFF"
                            android:textSize="14dp"
                            android:visibility="invisible" />


                        <TextView
                            android:id="@+id/tv_HQName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/poppins"
                            android:gravity="start"
                            android:text="MGR - Lucknow"
                            android:textColor="@color/grey1"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_DivName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="end"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:text="Pharma"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#EFEFEF" />

                    <LinearLayout
                        android:id="@+id/ln_ff_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-1dp"
                            android:layout_marginEnd="-1dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1.3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/poppins"
                                    android:text="Target"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.05"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_horizontal"
                                    android:text=":"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_target"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/sanfont"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/poppins"
                                    android:text="Primary Sale"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.05"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_horizontal"
                                    android:text=":"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_primary"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/sanfont"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/poppins"
                                    android:text="Achievement"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.05"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_horizontal"
                                    android:text=":"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_achie"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/sanfont"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textColor="#00BFFF" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/poppins"
                                    android:text="Growth"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.05"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_horizontal"
                                    android:text=":"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_growth"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/sanfont"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tr_pcpm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginEnd="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/poppins"
                                    android:text="PCPM"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.05"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_horizontal"
                                    android:text=":"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_pcpm"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/sanfont"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black" />
                            </TableRow>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-1dp"
                            android:layout_marginEnd="-1dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/BarGraph"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_margin="2dp"
                                    android:layout_weight=".1"
                                    android:elevation="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
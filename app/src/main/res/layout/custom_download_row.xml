<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/ash"
        android:textSize="14sp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Cancel"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_file"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/tv_progress"
        android:max="100" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:text="    1%"
        android:textAlignment="gravity"
        android:visibility="gone"
        android:textColor="#38393a"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tv_filesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar1"
        android:layout_marginEnd="25dp"
        android:layout_alignParentRight="true"
        android:text=""
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/ash"
        android:textSize="14sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/tick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/progressBar1"
        android:layout_marginEnd="40dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_baseline_check_24"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/download"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_above="@+id/progressBar1"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/home_sync"
        />


    <TextView
        android:id="@+id/tv_setfilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_filesize"
        android:layout_alignBottom="@+id/tv_filesize"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/tv_file"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/ash"
        android:textSize="14sp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_custom_gv_search_main"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_custom_gv_search"
        android:layout_width="305dp"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_presntation_search"
            android:layout_width="268dp"
            android:layout_height="157dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_presentation_rectangle"
            android:src="@mipmap/splash_screen"
            fresco:roundedCornerRadius="8dp"
            fresco:roundBottomStart="true"
            fresco:roundBottomEnd="true"
            fresco:roundingBorderWidth="1dp"
            fresco:actualImageScaleType="fitXY"
            fresco:roundingBorderColor="@color/ash"
            fresco:pressedStateOverlayImage="@color/ash" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_presntation_view"
            android:layout_width="344dp"
            android:layout_height="159dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_ash"
            android:visibility="gone"
            android:src="@mipmap/splash_screen"
            fresco:roundedCornerRadius="10dp"
            fresco:roundBottomStart="false"
            fresco:roundBottomEnd="false"
            fresco:actualImageScaleType="fitXY"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@color/ash"
            fresco:pressedStateOverlayImage="@color/ash" />

        <TextView
            android:id="@+id/tv_presentation_brd_name"
            android:layout_width="270dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_alignBottom="@+id/iv_presntation_search"
            android:layout_alignParentStart="true"
            android:alpha="0.8"
            android:background="@drawable/shape_presentation_ash"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>

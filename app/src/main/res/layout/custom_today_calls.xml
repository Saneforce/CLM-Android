<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/rl_view">

        <ImageView
            android:id="@+id/iv_tdaycall_pf"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            app:srcCompat="@mipmap/iv_profile" />

        <TextView
            android:id="@+id/tv_tdaycall_drNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/iv_tdaycall_pf"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:fontFamily="@font/poppins_light"
            android:text="Doctor Name"
            android:layout_toLeftOf="@+id/iv_edit"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/ash"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_tdaycall_vstDt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_tdaycall_drNm"
            android:layout_below="@+id/tv_tdaycall_drNm"
            android:fontFamily="@font/poppins_light"
            android:text="22 - 10-2018 10:40:43"
            android:textColor="@color/ash"
            android:textSize="12sp"
            android:typeface="serif" />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="35dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/home_edit"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_del"/>
        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="35dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/home_del"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:id="@+id/iv_sync"
            android:layout_width="35dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/home_sync"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    <TextView
        android:id="@+id/head_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="San Clm"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:padding="5dp"
        android:background="@drawable/audit_grey_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_textentry1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/tv_size"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_mge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hjk"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/tv_size"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_mge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hh"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/tv_size"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop= "5dp"
            android:textSize="@dimen/tv_size"
            android:visibility="gone"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Enter the Reason"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_tpyes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:text="@string/yes"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/grey"
            android:textSize="@dimen/tv_size"/>
        <Button
            android:id="@+id/btn_tpno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/grey"
            android:textSize="@dimen/tv_size"/>

    </LinearLayout>
</LinearLayout>

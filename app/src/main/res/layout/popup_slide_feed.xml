<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="50"
        android:orientation="vertical"
        android:background="#d1cfcf">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f71919">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback Details"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:typeface="serif"
                    android:id="@+id/prd_time"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/iv_close_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    app:srcCompat="@mipmap/close_btn" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback Details"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:typeface="serif"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:id="@+id/txt_prd_name"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.8">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="1dp"
                android:divider="#c4c2c2"
                android:id="@+id/list_slide">

            </ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.7">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_feed"
                android:visibility="invisible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback "
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:typeface="serif"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/spin_down_arrow" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10.5"
            android:background="@drawable/layout_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/ll_edt_bg">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_feed"
                android:background="@null"
                android:fontFamily="@font/poppins_medium"
                android:typeface="serif"
                android:hint="Feedback Here"
                android:layout_marginLeft="5dp"
                android:textColorHint="#A2A0A0"
                android:textStyle="normal"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
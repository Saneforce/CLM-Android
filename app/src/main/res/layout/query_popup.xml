<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="800dp"
    android:layout_height="350dp"
    android:background="#d4d1d1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12.5"
            android:background="#f91616">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Queries"
                    android:textColor="@color/ash_pecalltext"
                    android:textSize="19sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:typeface="serif"
                    android:id="@+id/prd_time"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/iv_close_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    app:srcCompat="@mipmap/close_btn" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/lay_edit"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_background">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:typeface="serif"
                android:id="@+id/edt_report"
                android:layout_marginLeft="5dp"
                android:hint="type here"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="OK"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:id="@+id/ok"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:fitsSystemWindows="true"
        android:background="#fff"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        >
    <View
        android:visibility="gone"
        android:id="@+id/view"
        android:layout_width="5dp"
        android:layout_height="93dp"
        android:background="#05c12b"
        />
        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:textSize="15dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/text1"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="110407"
                    android:textColor="#504D4D" />

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/text2"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Ibucap GEL 30g"
                    android:textColor="#091C87"
                    android:textSize="17dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/alloos1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:text="@string/availoos"
                    android:textOff="@string/availoos"
                    android:textOn="@string/availoos"
                    android:textColor="#000" />

                <ToggleButton
                    android:id="@+id/allavail1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/alloos1"
                    android:background="@drawable/rectangle"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:text="@string/allavail"
                    android:textOn="@string/allavail"
                    android:textOff="@string/allavail"
                    android:textColor="#000" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/etstock"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@+id/allavail1"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000" />

                <CheckBox
                    android:text=""
                    android:id="@+id/checkbox"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:checked="false"
                    android:scaleX="1.8"
                    android:scaleY="1.8"
                    android:theme="@style/MyCheckBox"

                    />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>



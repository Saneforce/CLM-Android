<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:orientation="horizontal"
        android:weightSum="50"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/row_item_feed_edt_grey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/comp_name_list">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand Audit List"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_medium"
                    android:typeface="serif"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:id="@+id/txt_comp_name"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search_brand"
                    android:layout_marginRight="5dp"
                    android:id="@+id/img_minus"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"

                    />

            </RelativeLayout>

            <!--
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brand Audit List"
                            android:layout_marginTop="15dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_medium"
                            android:typeface="serif"
                            android:textSize="16sp"
                            />
            -->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/row_item_feed_edt_grey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="end"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/comp_prd_list">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand Audit List"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_medium"
                    android:typeface="serif"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:id="@+id/txt_comp_brd_name"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search_brand"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"

                    />

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.5"
            android:background="@drawable/row_item_feed_edt_grey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ll_qty"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/edt_qty"
                android:textSize="14sp"
                android:textColor="#000000"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:maxLength="6"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.3"
            android:background="@drawable/row_item_feed_edt_grey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ll_rate"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:typeface="serif"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:id="@+id/txt_rate"
                android:paddingLeft="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.2"
            android:background="@drawable/row_item_feed_edt_grey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:typeface="serif"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:id="@+id/txt_value"
                android:paddingLeft="5dp"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
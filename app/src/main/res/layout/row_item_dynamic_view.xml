<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:weightSum="20"
    android:padding="10dp"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="FieldName"
                android:id="@+id/txt_label"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rect_light_grey"
                android:padding="8dp"
                android:id="@+id/rlay_spin"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" Select "
                    android:id="@+id/spin_txt"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/spin_down_arrow"
                    android:layout_toRightOf="@+id/spin_txt"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>



            <EditText
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Enter Text"
                android:padding="8dp"
                android:textColorHint="#787878"
                android:singleLine="true"
                android:id="@+id/edt_field"
                android:visibility="gone"
                android:background="@drawable/round_rect_light_grey"/>
            <EditText
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Enter Numeric Value"
                android:padding="8dp"
                android:textColorHint="#787878"

                android:inputType="number"
                android:singleLine="true"
                android:id="@+id/edt_field_numeric"
                android:visibility="gone"
                android:background="@drawable/round_rect_light_grey"/>
            <EditText
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textColor="@color/black"
                android:hint="Enter Text"
                android:padding="5dp"
                android:textColorHint="#787878"
                android:id="@+id/edt_feed"
                android:visibility="gone"
                android:background="@drawable/round_rect_light_grey"/>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/rlay_geo"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_light_grey"
                    android:padding="8dp"
                    android:id="@+id/rlay_geo_lat"
                    android:visibility="visible">


                    <EditText
                        android:selectAllOnFocus="true"
                        android:imeOptions="actionNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Enter Text"
                        android:padding="5dp"
                        android:textColorHint="#787878"
                        android:id="@+id/edt_lat"

                        android:background="@drawable/round_rect_light_grey"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_light_grey"
                    android:padding="8dp"
                    android:id="@+id/rlay_geo_lng"
                    android:visibility="visible"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/rlay_geo_lat">

                    <EditText
                        android:selectAllOnFocus="true"
                        android:imeOptions="actionNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Enter Text"
                        android:padding="5dp"
                        android:textColorHint="#787878"
                        android:id="@+id/edt_lng"

                        android:background="@drawable/round_rect_light_grey"/>

                </RelativeLayout>

            </RelativeLayout>










            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/rlay_date"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="From"
                    android:padding="8dp"
                    android:id="@+id/from_txt"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_light_grey"
                    android:padding="8dp"
                    android:id="@+id/rlay_spin_fdt"
                    android:visibility="visible"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/from_txt">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text=" Select "
                        android:id="@+id/spin_txt_fdt"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/spin_down_arrow"
                        android:layout_toRightOf="@+id/spin_txt_fdt"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="To"
                    android:padding="8dp"
                    android:id="@+id/to_txt"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/rlay_spin_fdt"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_light_grey"
                    android:padding="8dp"
                    android:id="@+id/rlay_spin_tdt"
                    android:visibility="visible"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/to_txt">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text=" Select "
                        android:id="@+id/spin_txt_tdt"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/spin_down_arrow"
                        android:layout_toRightOf="@+id/spin_txt_tdt"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlay_upload"
                android:visibility="gone">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_light_grey"
                    android:text="Upload"
                    android:textColor="#000"
                    android:id="@+id/btn_upload"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_upload"
                    android:textColor="#000"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/btn_upload"
                    android:layout_centerVertical="true"
                    android:singleLine="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlay_currency"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_currency"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:singleLine="true"/>

                <EditText
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Enter the value"
                    android:padding="8dp"
                    android:textColorHint="#787878"
                    android:digits="1234567890."
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:id="@+id/edt_field_currency"
                    android:layout_toRightOf="@+id/txt_currency"
                    android:background="@drawable/round_rect_light_grey"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/rlay_head">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="FieldName"
                    android:textSize="16sp"
                    android:id="@+id/txt_label_header"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#818080"
                    android:layout_alignEnd="@+id/txt_label_header"
                    android:layout_below="@+id/txt_label_header"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
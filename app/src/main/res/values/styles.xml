<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:reqNavigation">nonav</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:calendarViewShown">false</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/ash_pecalltext</item>
        <item name="colorControlActivated">#03DAC5</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/ash_pecalltext</item>
        <item name="colorControlActivated">@color/gold_yellow</item>
    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
       <item name="android:background">#00000000</item>
    </style>

    <style name="Dateick" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="Mycheck" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="check_box" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/grey_light</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="Theme.NumberPicker" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="DialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:background">#fff</item>
    </style>

</resources>
